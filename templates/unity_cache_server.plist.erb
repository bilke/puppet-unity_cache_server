<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>Unity Cache Server</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>The Unity Asset Cache Server drastically reduces the time it takes to import assets when working in large teams.</string>

      <key>Port</key>
      <integer><%= scope.lookupvar "unity_cache_server::config::port" %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "unity_cache_server::config::executable" %></string>
      <string>--path</string>
      <string><%= scope.lookupvar "unity_cache_server::config::datadir" %></string>
      <string>--size</string>
      <string><%= scope.lookupvar "unity_cache_server::config::size" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::luser" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "unity_cache_server::config::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "unity_cache_server::config::logdir" %>/console.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "unity_cache_server::config::logdir" %>/console.log</string>
  </dict>
</plist>
